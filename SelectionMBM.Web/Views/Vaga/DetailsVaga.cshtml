@model VagaViewModel
@{
    ViewData["Title"] = "Atualizar Vaga";
}

<div class="container">
    <div class="container-fluid h-custom">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="form-row">
                <div class="form-group d-flex justify-content-end pt-1 col-md-6">
                    <a asp-controller="Vaga" asp-action="CandidatosVaga" asp-route-id="@Model.Id" class="btn btn-warning btn-sm">Ver Candidaturas</a>
                </div>
            </div>
            <form asp-controller="Vaga" asp-action="IndexVaga" method="post">
                <div class="form-row">
                    <div class="form-group pt-1 col-md-6">
                        <label for="Name">Titula Vaga</label>
                        <input asp-for="TituloVaga" class="form-control" value="@Model.TituloVaga" disabled />
                    </div>
                    <div class="form-group pt-1 col-md-6">
                        <label for="Name">Localização</label>
                        <input asp-for="LocalVaga" class="form-control" value="@Model.LocalVaga" disabled />
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group pt-1 col-md-6">
                        <label for="Name">Modalidade de Trabalho</label>
                        <input asp-for="Modalidade" class="form-control" value="@Model.Modalidade" disabled />
                    </div>
                    <div class="form-group pt-1 col-md-6">
                        <label for="Name">Empresa</label>
                        <input asp-for="Organizacao" class="form-control" value="@Model.Organizacao" disabled />
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group pt-1 col-md-6">
                        <label for="Name">Descrição </label>
                        <textarea asp-for="Descricao" class="form-control" rows="5" disabled>@Model.Descricao</textarea>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group pt-1 col-md-6">
                        <button type="submit" class="btn btn-secondary">Voltar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
