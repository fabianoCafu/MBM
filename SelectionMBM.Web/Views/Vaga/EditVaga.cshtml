@model VagaViewModel;
@{
    ViewData["Title"] = "Atualizar Vaga";
}

<div class="container">
    <div class="container-fluid h-custom">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <form asp-controller="Vaga" asp-action="EditVaga" method="post"> 
                <div class="form-row">
                    <div class="form-group pt-1 col-md-6">
                        <label for="Name">Titula Vaga</label>
                        <input asp-for="TituloVaga" class="form-control" placeholder="Informe o titulo da vaga" />
                        <span asp-validation-for="TituloVaga" class="text-danger"></span>
                    </div>
                    <div class="form-group pt-1 col-md-6">
                        <label for="Name">Localização</label>
                        <input asp-for="LocalVaga" class="form-control" placeholder="Informe a localização da vaga" />
                        <span asp-validation-for="LocalVaga" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group pt-1 col-md-6">
                        <label for="Name">Modalidade de Trabalho</label>
                        <input asp-for="Modalidade" class="form-control" placeholder="Informe a modalida de trabalho" />
                        <span asp-validation-for="Modalidade" class="text-danger"></span>
                    </div>
                    <div class="form-group pt-1 col-md-6">
                        <label for="Name">Empresa</label>
                        <input asp-for="Organizacao" class="form-control" placeholder="Informe nome da empresa" />
                        <span asp-validation-for="Organizacao" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group pt-1 col-md-6">
                        <label for="Name">Descrição </label>
                        <textarea asp-for="Descricao" class="form-control" rows="5"></textarea>
                        <span asp-validation-for="Descricao" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group pt-1 col-md-6">
                        <button type="submit" class="btn btn-primary">Salvar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
